<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_multireport_style_tree" model="ir.ui.view">
        <field name="name">view.multireport.style.tree</field>
        <field name="model">multireport.style</field>
        <field name="arch" type="xml">
            <tree string="Report Style">
                <field name="name"/>
                <field name="origin"/>
            </tree>
        </field>
    </record>

    <record id="view_multireport_style_form" model="ir.ui.view">
        <field name="name">view.multireport.style.form</field>
        <field name="model">multireport.style</field>
        <field name="arch" type="xml">
            <form string="Invoice Type">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="origin"/>
                    </group>
                    <notebook colspan="4">
                        <page name="default" string="Default Setting">
                            <group>
                                <group>
                                    <field name="header_mode" attrs="{'readonly': [('origin', '=', 'odoo')]}"/>
                                    <field name="payment_term_position" attrs="{'readonly': [('origin', '=', 'odoo')]}"/>
                                    <field name="footer_mode" attrs="{'readonly': [('origin', '=', 'odoo')]}"/>
                                </group>
                                <group>
                                    <field name="code_mode" attrs="{'readonly': [('origin', '=', 'odoo')]}"/>
                                    <field name="description_mode" attrs="{'readonly': [('origin', '=', 'odoo')]}"/>
                                </group>
                                <group>
                                    <field name="pdf_watermark" attrs="{'readonly': [('origin', '=', 'odoo')]}"/>
                                    <field name="pdf_watermark_expression" attrs="{'readonly': [('origin', '=', 'odoo')]}"/>
                                    <field name="pdf_ending_page" attrs="{'readonly': [('origin', '=', 'odoo')]}"/>
                                </group>
                            </group>
                        </page>
                        <page name="sale_order" string="Sale Order">
                            <group>
                                <field name="model_sale_order_id"/>
                                <group>
                                    <field name="header_mode_sale_order" attrs="{'readonly': [('origin', '=', 'odoo')]}"/>
                                </group>
                                <field name="description_mode_sale_order" readonly="1"/>
                                <field name="code_mode_sale_order" readonly="1"/>
                                <field name="pdf_watermark_sale_order" attrs="{'readonly': [('origin', '=', 'odoo')]}"/>
                            </group>
                        </page>
                        <page name="packing_list" string="Delivery document">
                            <group>
                                <group>
                                    <field name="header_mode_stock_picking_package_preparation" attrs="{'readonly': [('origin', '=', 'odoo')]}"/>
                                </group>
                                <field name="template_stock_picking_package_preparation"/>
                                <field name="description_mode_stock_picking_package_preparation" readonly="1"/>
                                <field name="code_mode_stock_picking_package_preparation" readonly="1"/>
                                <field name="pdf_watermark_stock_picking_package_preparation" attrs="{'readonly': [('origin', '=', 'odoo')]}"/>
                            </group>
                        </page>
                        <page name="account_invoice" string="Account Invoice">
                            <group>
                                <group>
                                    <field name="header_mode_account_invoice" attrs="{'readonly': [('origin', '=', 'odoo')]}"/>
                                    <field name="payment_term_position_account_invoice" attrs="{'readonly': [('origin', '=', 'odoo')]}"/>
                                </group>
                                <group>
                                    <field name="code_mode_account_invoice" attrs="{'readonly': [('origin', '=', 'odoo')]}"/>
                                    <field name="description_mode_account_invoice" attrs="{'readonly': [('origin', '=', 'odoo')]}"/>
                                </group>
                                <group>
                                    <field name="pdf_watermark_account_invoice" attrs="{'readonly': [('origin', '=', 'odoo')]}"/>
                                </group>
                            </group>
                        </page>
                        <page name="purchase_order" string="Purchase Order">
                            <group>
                                <group>
                                    <field name="header_mode_purchase_order" attrs="{'readonly': [('origin', '=', 'odoo')]}"/>
                                </group>
                                <field name="template_purchase_order"/>
                                <field name="code_mode_purchase_order" readonly="1"/>
                                <field name="pdf_watermark_purchase_order" attrs="{'readonly': [('origin', '=', 'odoo')]}"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_multireport_style"
            model="ir.actions.act_window">
        <field name="name">Multireport Styles</field>
        <field name="res_model">multireport.style</field>
        <field name="view_id" ref="view_multireport_style_tree"/>
    </record>

    <menuitem id="menu_multireport_style"
              name="Multi-Report Style" action="action_multireport_style"
              parent="report.reporting_menuitem" sequence="90"
              groups="base.group_no_one"/>

</odoo>

