<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="delivery_data">
        <style type="text/css">
               table.delivery_data td h6 { margin: 0; }
               .signature { min-height: 4em; }
        </style>
        <table class="table table-condensed table-bordered delivery_data">
            <tr>
                <td>
                    <h6>Transportation Reason</h6>
                    <div class="signature" t-field="ddt.transportation_reason_id"></div>
                </td>
                <td>
                    <h6>Carriage Condition</h6>
                    <div t-field="ddt.carriage_condition_id"></div>
                </td>
                <td>
                    <h6>Transportation Method</h6>
                    <div t-field="ddt.transportation_method_id"></div>
                </td>
                <td>
                    <h6>Goods Description</h6>
                    <div class="signature" t-field="ddt.goods_description_id"></div>
                </td>
                <td>
                    <h6>Net Weight</h6>
                    <div class="signature" t-field="ddt.weight"></div>
                </td>
                <td>
                    <h6>Gross Weight</h6>
                    <div class="signature" t-field="ddt.gross_weight"></div>
                </td>
            </tr>
            <tr>
                <td colspan="2">
                    <h6>Carrier</h6>
                    <div class="signature" t-field="ddt.carrier_id.name"></div>
                </td>
                <td>
                    <h6>Date</h6>
                    <div class="signature" t-field="ddt.date_done"></div>
                </td>
                <td>
                    <h6>Pick up time</h6>
                    <div class="signature"></div>
                </td>
                <td>
                    <h6>Parcels</h6>
                    <div class="signature" t-field="ddt.parcels"></div>
                </td>
                <td>
                    <h6>Size</h6>
                    <div class="signature" t-field="ddt.volume"></div>
                </td>
            </tr>
        </table>
        <table class="table table-condensed table-bordered delivery_data">
            <tr>
                <td>
                    <h6>Carrier's Signature</h6>
                    <div class="signature"></div>
                </td>
                <td>
                    <h6>Driver's Signature</h6>
                    <div class="signature"></div>
                </td>
                <td>
                    <h6>Recipient's Signature</h6>
                    <div class="signature"></div>
                </td>
            </tr>
            <tr>
                <td colspan="3"><h6>Notes</h6>
                    <div class="signature" t-field="ddt.note"></div>
                </td>
            </tr>
        </table>
    </template>


    <template id="report_ddt_footer">

        <div class="row">
            <div class="col-xs-4 pull-right">
                <table class="table table-condensed">
                    <tr class="border-black">
                        <td><strong>Imponibile</strong></td>
                        <td class="text-right">
                            <span t-field="ddt.amount_untaxed" t-options='{"widget": "monetary", "display_currency": ddt.currency_id}'/>
                        </td>
                    </tr>
                    <tr>
                        <td>IVA</td>
                        <td class="text-right">
                            <span t-field="ddt.amount_tax" t-options='{"widget": "monetary", "display_currency": ddt.currency_id}'/>
                        </td>
                    </tr>
                    <tr class="border-black">
                        <td><strong>Totale</strong></td>
                        <td class="text-right">
                            <strong><span t-field="ddt.amount_total" t-options='{"widget": "monetary", "display_currency": ddt.currency_id}'/></strong>
                        </td>
                    </tr>
                </table>
            </div>
        </div>

    </template>

</odoo>

