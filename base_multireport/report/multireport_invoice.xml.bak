<odoo>

        <report 
            id="account_invoices"
            model="base_multireport.invoice"
            string="Invoices (customizated)"
            report_type="qweb-pdf"
            name="base_multireport.report_invoice"
            file="base_multireport.report_invoice"
            attachment_use="True"
            attachment="(object.state in ('open','paid')) and ('INV'+(object.number or '').replace('/','')+'.pdf')"
        />

<template id="report_invoice">
    <t t-call="report.html_container">
        <t t-foreach="docs" t-as="o">
            <t t-call="base_multireport.report_invoice_document" t-lang="o.partner_id.lang"/>
        </t>
    </t>
</template>

        <report 
            id="account_invoice_action_report_duplicate"
            model="base_multireport.invoice"
            string="Duplicates (customizated)"
            report_type="qweb-pdf"
            name="base_multireport.account_invoice_report_duplicate_main"
            file="base_multireport.report_invoice_duplicate"
            attachment_use="False"
        />

<template id="account_invoice_report_duplicate_main">
    <t t-call="report.html_container">
        <t t-foreach="docs" t-as="o">
            <t t-call="base_multireport.account_invoice_report_duplicate" t-lang="o.partner_id.lang"/>
        </t>
    </t>
</template>

</odoo>
